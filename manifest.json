{
  "manifest_version": 3,
  "name": "Crosserville Toolkit Extension",
  "description": "Base Level Extension",
  "version": "1.1.0",
  "icons": {
    "16": "res/icon-16.png",
    "32": "res/icon-32.png",
    "48": "res/icon-48.png",
    "128": "res/icon-128.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "res/icon-16.png",
      "32": "res/icon-32.png",
      "48": "res/icon-48.png",
      "128": "res/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "js": [
        "src/interface.js",
        "src/flips.js"
      ],
      "matches": [
        "https://www.crosserville.com/builder"
      ],
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "res/*.*"
      ],
      "matches": [
        "https://www.crosserville.com/*"
      ]
    }
  ]
}